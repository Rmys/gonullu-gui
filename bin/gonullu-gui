# This file has been taken from multibootusb project and altered for Gonullu GUI. For licensing, see that issue of multibootusb project: https://github.com/mbusb/multibootusb/issues/176
#

if [ $(which pkexec) ]; then
    if [ -f /usr/bin/gonullu-gui ]; then
        pkexec --disable-internal-agent "/usr/bin/gonullu-gui-main" "$@"
    fi

    if [ -f /usr/local/bin/gonullu-gui ]; then
        pkexec --disable-internal-agent "/usr/local/bin/gonullu-gui-main" "$@"
    fi
else
    if [ -f /usr/bin/gonullu-gui ]; then
        /usr/bin/gonullu-gui-main "$@"
    fi

    if [ -f /usr/local/bin/gonullu-gui ]; then
        /usr/local/bin/gonullu-gui-main "$@"
    fi
fi
